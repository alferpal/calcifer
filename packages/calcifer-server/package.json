  "keywords": [],
  "author": {
    "email": "alferpal@gmail.com",
    "name": "Alex Ferrando",
    "twitter": "alferpal",
    "url": "https://github.com/alferpal"
  },
  "license": "MIT",
  "dependencies": {
    "@alferpal/calcifer-utils": "~1.0.5",
    "blipp": "~3.1.1",
    "bluebird": "~3.5.3",
    "boom": "~7.2.1",
    "hapi": "~17.8.1",
    "hapi-pino": "~5.1.0",
    "hapi-pulse": "~2.0.0",
    "lodash": "~4.17.10",
    "pino-colada": "~1.4.4"
  },
  "devDependencies": {
    "@alferpal/calcifer-tslint-rules": "~1.0.5",
    "@alferpal/calcifer-types": "~1.0.5",
