    "@hapi/boom": "~7.4.2",
    "@hapi/hapi": "~18.3.1",
    "blipp": "~4.0.0",
    "bluebird": "~3.5.5",
    "hapi-pino": "~6.0.1",
    "hapi-pulse": "~2.2.1",
    "lodash": "~4.17.10",
