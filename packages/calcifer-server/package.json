    "@types/bluebird": "~3.5.24",
    "@types/boom": "~7.2.0",
    "@types/hapi": "~17.6.4",
    "@types/jest": "~23.3.9",
    "@types/lodash": "~4.14.109",
    "@types/node": "~10.12.10",
    "cz-conventional-changelog": "~2.1.0",
    "jest": "~23.6.0",
    "npm-run-all": "~4.1.3",
    "nyc": "~13.1.0",
    "onchange": "~5.1.0",
    "rimraf": "~2.6.2",
    "standard-version": "~4.4.0",
    "ts-jest": "~23.10.1",
    "ts-node": "~7.0.1",
    "tslint": "~5.11.0",
    "typescript": "~3.1.5"
  },
