{
  "name": "@alferpal/calcifer-auth-service",
  "version": "0.0.0",
  "description": "Service for managing users and authentication",
  "scripts": {
    "build:fast": "tsc --build tsconfig-src.json --incremental",
    "build:watch": "onchange -i -k -v \"src/**/*.ts\" -- npm run build:fast",
    "build": "tsc --build tsconfig-src.json",
    "clean": "rimraf .nyc_output coverage* dist",
    "dev:watch": "onchange -i -k -v \"src/**/*.ts\" -- npm run dev",
    "dev": "node -r dotenv/config dist/server.js | pino-pretty -c -t",
    "knex": "dotenv knex --knexfile ./knexfile.ts",
    "knex:migrate:make": "dotenv knex --knexfile ./knexfile.ts migrate:make -x ts",
    "knex:migrate:latest": "dotenv knex --knexfile ./knexfile.ts migrate:latest",
    "knex:migrate:rollback": "dotenv knex --knexfile ./knexfile.ts migrate:rollback",
    "lint": "eslint --ext .ts src --fix",
    "prebuild:fast": "npm run lint",
    "prebuild": "npm-run-all -p  clean lint",
    "predev": "npm run build:fast",
    "prerelease": "npm test ",
    "pretest": "npm run build",
    "start": "node dist/server.js | pino-pretty -c -t",
    "//test": "nyc jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:alferpal/calcifer.git",
    "directory": "packages/calcifer-auth-service"
  },
  "homepage": "https://github.com/alferpal/calcifer",
  "bugs": "https://github.com/alferpal/calcifer/issues",
  "keywords": [],
  "author": {
    "email": "alferpal@gmail.com",
    "name": "Alex Ferrando",
    "twitter": "alferpal",
    "url": "https://github.com/alferpal"
  },
  "license": "Parity-7.0.0",
  "dependencies": {
    "@alferpal/calcifer-server-loader": "workspace:~1.0.0",
    "@alferpal/calcifer-utils": "workspace:~1.0.0",
    "@hapi/boom": "~9.1.1",
    "ioredis": "~4.22.0",
    "knex": "~0.21.17",
    "pg": "~8.5.1",
    "pino-pretty": "~4.5.0"
  },
  "devDependencies": {
    "@alferpal/calcifer-types": "workspace:~1.0.0",
    "@alferpal/calcifer-typings": "workspace:~1.0.0",
    "@alferpal/eslint-config-calcifer": "workspace:~1.0.0",
    "@jest/globals": "^26.6.2",
    "@types/hapi__hapi": "~20.0.5",
    "@types/ioredis": "~4.19.3",
    "@types/jest": "~26.0.20",
    "@types/lodash": "~4.14.168",
    "@types/node": "~14.14.26",
    "@typescript-eslint/eslint-plugin": "~4.15.0",
    "@typescript-eslint/parser": "~4.15.0",
    "cz-conventional-changelog": "~3.3.0",
    "dotenv": "~8.2.0",
    "dotenv-cli": "~4.0.0",
    "eslint": "~7.19.0",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-jest": "~24.1.3",
    "eslint-plugin-node": "~11.1.0",
    "jest": "~26.6.3",
    "npm-run-all": "~4.1.5",
    "nyc": "~15.1.0",
    "onchange": "~7.1.0",
    "rimraf": "~3.0.2",
    "standard-version": "~9.1.0",
    "ts-jest": "~26.5.1",
    "ts-node": "~9.1.1",
    "typescript": "~4.1.5"
  },
  "files": [
    "dist/**/*.d.ts",
    "dist/**/*.js"
  ],
  "private": true
}
