{
  "name": "@alferpal/calcifer-utils",
  "version": "1.0.6",
  "description": "Shared utilities across calcifer packages",
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:src": "tsc -p src",
    "build:test": "tsc -p test",
    "clean": "rimraf .nyc_output coverage* dist",
    "lint": "npm-run-all -p lint:*",
    "lint:src": "eslint --ext .ts src",
    "lint:test": "eslint --ext .ts test",
    "prebuild": "npm-run-all -p  clean lint",
    "pretest": "npm run build",
    "test": "nyc jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:alferpal/calcifer.git",
    "directory": "packages/calcifer-utils"
  },
  "homepage": "https://github.com/alferpal/calcifer",
  "bugs": "https://github.com/alferpal/calcifer/issues",
  "keywords": [],
  "author": {
    "email": "alferpal@gmail.com",
    "name": "Alex Ferrando",
    "twitter": "alferpal",
    "url": "https://github.com/alferpal"
  },
  "license": "MIT",
  "dependencies": {
    "fast-glob": "~3.2.4",
    "pino": "~6.7.0"
  },
  "devDependencies": {
    "@alferpal/calcifer-types": "^1.0.6",
    "@alferpal/calcifer-typings": "^1.0.6",
    "@alferpal/eslint-config-calcifer": "^1.0.6",
    "@types/hapi__hapi": "~20.0.1",
    "@types/jest": "~26.0.14",
    "@types/node": "~14.11.5",
    "@types/pino": "~6.3.2",
    "@typescript-eslint/eslint-plugin": "~3.10.1",
    "@typescript-eslint/parser": "~3.10.1",
    "conventional-changelog": "~3.1.23",
    "eslint": "~7.10.0",
    "eslint-config-airbnb-typescript": "~9.0.0",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-jest": "~24.1.0",
    "eslint-plugin-node": "~11.1.0",
    "jest": "~26.5.2",
    "npm-run-all": "~4.1.5",
    "nyc": "~15.1.0",
    "onchange": "~7.0.2",
    "rimraf": "~3.0.2",
    "ts-jest": "~26.4.1",
    "ts-node": "~9.0.0",
    "typescript": "~4.0.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
