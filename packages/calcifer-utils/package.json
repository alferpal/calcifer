{
  "name": "@alferpal/calcifer-utils",
  "version": "1.0.5",
  "description": "Shared utilities across calcifer packages",
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:src": "tsc -p src",
    "build:test": "tsc -p test",
    "clean": "rimraf .nyc_output coverage* dist",
    "lint": "npm-run-all -p lint:*",
    "lint:src": "tslint -c tslint.json -p src",
    "lint:test": "tslint -c tslint.json -p test",
    "prebuild": "npm-run-all -p  clean lint",
    "pretest": "npm run build",
    "test": "nyc jest"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:alferpal/calcifer.git"
  },
  "homepage": "https://github.com/alferpal/calcifer",
  "bugs": "https://github.com/alferpal/calcifer/issues",
  "keywords": [],
  "author": {
    "email": "alferpal@gmail.com",
    "name": "Alex Ferrando",
    "twitter": "alferpal",
    "url": "https://github.com/alferpal"
  },
  "license": "MIT",
  "dependencies": {
    "fast-glob": "~2.2.6",
    "pino": "~5.10.10"
  },
  "devDependencies": {
    "@alferpal/calcifer-tslint-rules": "~1.0.5",
    "@alferpal/calcifer-types": "~1.0.5",
    "@alferpal/calcifer-typings": "~1.0.5",
    "@types/hapi": "~18.0.0",
    "@types/jest": "~23.3.13",
    "@types/node": "~10.12.15",
    "@types/pino": "~5.8.4",
    "jest": "~23.6.0",
    "npm-run-all": "~4.1.5",
    "nyc": "~13.1.0",
    "onchange": "~5.2.0",
    "rimraf": "~2.6.2",
    "ts-jest": "~23.10.1",
    "ts-node": "~8.0.1",
    "tslint": "~5.12.1",
    "typescript": "~3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.d.ts",
    "dist/**/*.js"
  ]
}
