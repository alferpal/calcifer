{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "~/*": [
        "packages/*"
      ]
    },
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017"
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
