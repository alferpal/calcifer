{
  "name": "calcifer-monorepo",
  "description": "A side-project to build somewhat of a CI / CD tool, not pretending to be production-ready in any way",
  "scripts": {
    "build": "npm run tsc",
    "commit": "git-cz",
    "prebuild": "npm run tslint --silent",
    "prerelease": "npm t --silent",
    "prestart": "npm run build --silent",
    "release": "standard-version -s",
    "start": "node dist/scripts/server.js | pino-colada",
    "tsc": "tsc",
    "test": "jest",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "updateCOC": "weallbehave -o . && git add CODE_OF_CONDUCT.md && git commit -m 'docs(coc): updated CODE_OF_CONDUCT.md'",
    "updateContrib": "weallcontribute -o . && git add CONTRIBUTING.md && git commit -m 'docs(contributing): updated CONTRIBUTING.md'"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:alferpal/calcifer.git"
  },
  "homepage": "https://github.com/alferpal/calcifer",
  "bugs": "https://github.com/alferpal/calcifer/issues",
  "keywords": [],
  "author": {
    "email": "alferpal@gmail.com",
    "name": "Alex Ferrando",
    "twitter": "alferpal",
    "url": "https://github.com/alferpal"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "~23.3.1",
    "chai": "~4.1.2",
    "commitizen": "^2.10.1",
    "concurrently": "^4.0.1",
    "cz-conventional-changelog": "~2.1.0",
    "jest": "^23.6.0",
    "lerna": "^3.3.2",
    "npm-run-all": "~4.1.3",
    "onchange": "~4.1.0",
    "standard-version": "~4.4.0",
    "ts-jest": "~23.1.4",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "~3.0.1",
    "weallbehave": "~1.2.0",
    "weallcontribute": "~1.0.8"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
