{
  "name": "calcifer-monorepo",
  "description": "Monorepo containing calcifer: a side-project to build somewhat of a CI / CD tool, not pretending to be production-ready in any way",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --sort",
    "clean": "lerna run clean --parallel",
    "commit": "git-cz",
    "lint": "lerna run lint --parallel",
    "postinstall": "npm run bootstrap",
    "release": "lerna publish --conventional-commits --npm-tag=next",
    "test": "lerna exec npm test",
    "updateCOC": "weallbehave -o . && git add CODE_OF_CONDUCT.md && git commit -m 'docs(coc): updated CODE_OF_CONDUCT.md'",
    "updateContrib": "weallcontribute -o . && git add CONTRIBUTING.md && git commit -m 'docs(contributing): updated CONTRIBUTING.md'"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:alferpal/calcifer.git"
  },
  "homepage": "https://github.com/alferpal/calcifer",
  "bugs": "https://github.com/alferpal/calcifer/issues",
  "keywords": [],
  "author": {
    "email": "alferpal@gmail.com",
    "name": "Alex Ferrando",
    "twitter": "alferpal",
    "url": "https://github.com/alferpal"
  },
  "license": "MIT",
  "devDependencies": {
    "commitizen": "~2.10.1",
    "concurrently": "~4.0.1",
    "cz-conventional-changelog": "~2.1.0",
    "lerna": "~3.4.0",
    "standard-version": "~4.4.0",
    "weallbehave": "~1.2.0",
    "weallcontribute": "~1.0.8"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
